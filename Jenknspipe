pipeline{
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
    FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages{
        stage('Building'){
            steps{
            echo "Intalling pre-requisites"
            sh 'npm install -g firebase-tools'
            }
        }  
         stage('Testing'){
            steps{
            echo "Starting Deploy"
            sh 'firebase deploy -P devops11-cesarrm --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
         stage('Production'){
            steps{
            echo "Starting Deploy"
            sh 'firebase deploy -P devopslab11-produc-crm --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
        stage('Staging'){
            steps{
            echo "Starting Deploy"
            sh 'firebase deploy -P devopslab11-stagin-crm  --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
        
    }
}
          
